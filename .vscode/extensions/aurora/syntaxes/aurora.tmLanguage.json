{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Aurora",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#number"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.aurora",
				"match": "\\b(extern|fn|return|let)\\b"
			}]
		},
		"number": {
			"match": "\\d+\\.?\\d+",
			"name": "constant.numeric.aurora"
		},
		"strings": {
			"name": "string.quoted.double.aurora",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aurora",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "\\b(\\+|-|\\*)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"match": "\\b(f64)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"end": "\\n"
				}
			]
		},
		"constant": {
			"match": "\\b(?:true|false|null)\\b",
			"name": "constant.language.aurora"
		}

	},
	"scopeName": "source.aurora"
}